<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotelfx.controller.RoomController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #eee; -fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#backToMain" text="&lt; Retour" />
            <Label text="Gestion des Chambres">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="roomTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colNumero" prefWidth="100.0" text="Numéro" />
            <TableColumn fx:id="colType" prefWidth="150.0" text="Type" />
            <TableColumn fx:id="colTarif" prefWidth="100.0" text="Tarif" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <VBox spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="txtNumero" promptText="Numéro de chambre" />
                  <ComboBox fx:id="cbType" promptText="Type" />
                  <TextField fx:id="txtTarif" promptText="Tarif" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveRoom" text="Ajouter" />
                  <Button mnemonicParsing="false" onAction="#deleteRoom" text="Supprimer" />
                  <Button mnemonicParsing="false" onAction="#clearForm" text="Nouveau" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>

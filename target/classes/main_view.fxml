<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotelfx.controller.MainController">
   <left>
      <VBox spacing="10.0" style="-fx-background-color: #333; -fx-padding: 20;" BorderPane.alignment="CENTER">
         <children>
            <Label text="HotelFX" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showRooms" text="Chambres" />
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showClients" text="Clients" />
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showReservations" text="Réservations" />
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showInvoices" text="Facturation" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Bienvenue dans HotelFX">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label text="Sélectionnez un menu à gauche pour commencer." />
         </children>
      </VBox>
   </center>
</BorderPane>

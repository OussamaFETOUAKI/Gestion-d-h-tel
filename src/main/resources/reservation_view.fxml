<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotelfx.controller.ReservationController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #eee; -fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#backToMain" text="&lt; Retour" />
            <Label text="Gestion des Réservations">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="reservationTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colChambre" prefWidth="100.0" text="Chambre" />
            <TableColumn fx:id="colClient" prefWidth="150.0" text="Client" />
            <TableColumn fx:id="colDebut" prefWidth="100.0" text="Début" />
            <TableColumn fx:id="colFin" prefWidth="100.0" text="Fin" />
            <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <VBox spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="cbChambre" promptText="Choisir Chambre" />
                  <ComboBox fx:id="cbClient" promptText="Choisir Client" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <DatePicker fx:id="dpDebut" promptText="Date Début" />
                  <DatePicker fx:id="dpFin" promptText="Date Fin" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveReservation" text="Réserver" />
                  <Button mnemonicParsing="false" onAction="#cancelReservation" text="Annuler Séjour" />
                  <Button mnemonicParsing="false" onAction="#clearForm" text="Nouveau" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>

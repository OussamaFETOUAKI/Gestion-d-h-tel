<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotelfx.controller.ClientController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #eee; -fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#backToMain" text="&lt; Retour" />
            <Label text="Gestion des Clients">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtSearch" onAction="#search" promptText="Recherche..." />
            <Button mnemonicParsing="false" onAction="#search" text="Rechercher" />
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="clientTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colNom" prefWidth="150.0" text="Nom" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colTelephone" prefWidth="120.0" text="Téléphone" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <VBox spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="txtNom" promptText="Nom" />
                  <TextField fx:id="txtEmail" promptText="Email" />
                  <TextField fx:id="txtTelephone" promptText="Téléphone" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveClient" text="Ajouter" />
                  <Button mnemonicParsing="false" onAction="#deleteClient" text="Supprimer" />
                  <Button mnemonicParsing="false" onAction="#clearForm" text="Nouveau" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
